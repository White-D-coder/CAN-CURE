generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
}


model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  name     String?
  password String
  medicines Medicine[]
  Appointments Appointment[]
  CancerType CancerType[]
  Reports    Report[]
  
}

model Doctor {
  doctorId     Int @id @default(autoincrement())
  name         String
  specialist   String
  experience   Int
  email        String @unique
  password     String @default("password123")
  appointments Appointment[]
  Reports      Report[]
}

model Appointment {
  id          Int      @id @default(autoincrement())
  date        String
  time        String
  patientName String
  doctor      Doctor   @relation(fields: [doctorId], references: [doctorId])
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
  doctorId    Int
}

model Admin {
  adminId  Int    @id @default(autoincrement())
  username String @unique
  password String
}

model Medicine {
  medId       Int      @id @default(autoincrement())
  medName     String
  description String
  dose        String
  frequency   String
  startDate   DateTime
  endDate     DateTime
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
}

model CancerType {
  cancerId    Int    @id @default(autoincrement())
  name        String
  stage       Int
  description String
  symptoms    String
  treatments  String
  user        User   @relation(fields: [userId], references: [id])
  userId      Int
}


model Report {
  reportId    Int      @id @default(autoincrement())
  reportName  String
  reportUrl   String
  date        DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
  doctor      Doctor?  @relation(fields: [doctorId], references: [doctorId])
  doctorId    Int?
}
